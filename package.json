{
  "name": "@nsoft/vuetify-colorizer",
  "version": "1.0.12",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build --target lib --name vuetify-colorizer src/index.js",
    "lint": "vue-cli-service lint",
    "test": "npm run lint && jest",
    "coverage": "npm test && codecov",
    "prepublish": "npm run build"
  },
  "license": "MIT",
  "author": "Chameleon Team <chameleon@nsoft.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/chmjs/vuetify-colorizer"
  },
  "main": "dist/vuetify-colorizer.umd.min.js",
  "dependencies": {
    "lodash": "^4.17.10",
    "vue": "^2.5.17",
    "vuetify": "^1.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-airbnb": "^3.0.1",
    "@vue/test-utils": "^1.0.0-beta.24",
    "babel-jest": "^23.4.2",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.4",
    "eslint-plugin-jest": "^21.22.0",
    "jest": "^23.5.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.5.17",
    "webpack-bundle-analyzer": "^3.0.0"
  },
  "babel": {
    "plugins": [
      "lodash"
    ],
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "vue": "never"
        }
      ],
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js}"
    ],
    "coverageDirectory": "./test/coverage/",
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
